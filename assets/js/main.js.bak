function hasDeal(id){
    let result;
    
    $.ajax({
        async: false,
        url: 'https://www.cheapshark.com/api/1.0/games?id=' + id,
        success: function(data) {

            $.each(data, function(i, item) {
                if(i == "deals"){
                    result = true;
                }
                else {
                    result = false;
                }
            });

        }
    });
    return result;

}


